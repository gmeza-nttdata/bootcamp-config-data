server:
  port: 8080
  
eureka:
  client:
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/
      
spring:
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
      routes:
        - id: users-service
          uri: http://localhost:8081/
          predicates:
            - Path=/user/**
        - id: product-service
          uri: http://localhost:8082/
          predicates:
            - Path=/account/**
